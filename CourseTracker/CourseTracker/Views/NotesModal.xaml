<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CourseTracker.Views.NotesModal">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="notesLabel"/>
            <Button x:Name="ShareNotes" Text="Share Notes" Clicked="ShareNotes_Clicked"/>
            <Button x:Name="ExitNotes" Text="Back" Clicked="ExitNotes_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>