<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CourseTracker.Views.SetAssessmentNotification">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Remind of the assessment in: "/>
            <Picker x:Name="AssessmentNotificaton">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>1 second</x:String>                        
                    </x:Array>
                </Picker.ItemsSource>
                <Picker.SelectedIndex>0</Picker.SelectedIndex>
            </Picker>
            <Button x:Name="SetReminder" Text="Set Reminder" Clicked="SetReminder_Clicked"/>
            <Button x:Name="CancelReminder" Text="Cancel"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>